@model SHOPGIAY.Models.Order

@{
    Layout = "_LayoutBitis";
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container py-5 text-center">
    <h2 class="mb-3 text-success">Đặt hàng thành công!</h2>
    <p>Cảm ơn bạn đã mua hàng tại SHOP GIÀY.</p>

    <p class="mt-3">
        Mã đơn hàng của bạn là: <strong>#@Model.OrderId</strong><br />
        Khách hàng: <strong>@Model.CustomerName</strong><br />
        Tổng tiền: <strong>@Model.TotalAmount.ToString("N0") ₫</strong>
    </p>

    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-dark mt-3">
        Tiếp tục mua sắm
    </a>
</div>
