@{
    var title = ViewData["Title"] as string ?? "Bitis Style Store";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- CSS riêng cho giao diện Bitis -->
    <link rel="stylesheet" href="~/css/bitis.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- HEADER -->
    <header class="bt-header">
        <!-- Top bar -->
        <div class="bt-top-bar py-1">
            <div class="container d-flex justify-content-between">
                <div>
                    <span>Trang bán hàng chính thức giày dép Việt Nam (demo)</span>
                </div>
                <div>
                    <span>Hotline: 0966.158.666 • 8h – 21h30</span>
                </div>
            </div>
        </div>

        <!-- Main header -->
        <div class="bt-header-main">
            <div class="container py-2">
                <div class="d-flex align-items-center justify-content-between">
                    <!-- Logo -->
                    <a href="/" class="bt-logo d-flex align-items-center text-decoration-none">
                        <img src="/images/logo-giay1.png" alt="Biti's" />
                    </a>

                    <!-- Menu chính (desktop) -->
                    <nav class="d-none d-lg-block">
                        <ul class="nav bt-main-nav">
                            <li class="nav-item"><a class="nav-link" href="#">Nam</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Nữ</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Trẻ em</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Hunter</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Bộ sưu tập</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Sale</a></li>
                        </ul>
                    </nav>

                    <!-- Search + icons -->
                    <div class="d-flex align-items-center">
                        <!-- Search desktop -->
                        <form asp-controller="Catalog" asp-action="Search"
                              method="get" class="bt-search-box d-none d-md-flex me-2">
                            <input name="q" class="form-control" placeholder="Tìm sản phẩm..." />
                            <button class="btn btn-outline-secondary" type="submit">
                                🔍
                            </button>
                        </form>

                        <!-- Icon search mobile -->
                        <button class="bt-icon-btn d-md-none" type="button" title="Tìm kiếm" id="btnToggleSearch">
                            🔍
                        </button>

                        <!-- Icon user -->
                        <button class="bt-icon-btn" type="button" title="Tài khoản">
                            👤
                        </button>

                        <!-- Icon cart -->
                        <a href="/cart" class="bt-icon-btn" title="Giỏ hàng">
                            🛒
                            <span class="bt-cart-badge">0</span>
                        </a>
                    </div>
                </div>

                <!-- Search mobile -->
                <div id="mobileSearch" class="bt-mobile-search d-md-none">
                    <form asp-controller="Catalog" asp-action="Search" method="get" class="d-flex bt-search-box">
                        <input name="q" class="form-control" placeholder="Tìm sản phẩm..." />
                        <button class="btn btn-outline-secondary" type="submit">Tìm</button>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <!-- MAIN -->
    <main class="bt-main">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bt-footer-white mt-4">
        <div class="container">

            <div class="row gy-4">
                <!-- Cột 1 -->
                <div class="col-md-3">
                    <h5 class="bt-footer-title">VỀ BITI'S</h5>
                    <ul class="bt-footer-list">
                        <li><a href="#">Câu chuyện Biti's</a></li>
                        <li><a href="#">Hoạt Động</a></li>
                        <li><a href="#">Liên hệ</a></li>
                    </ul>
                </div>

                <!-- Cột 2 -->
                <div class="col-md-3">
                    <h5 class="bt-footer-title">THÔNG TIN</h5>
                    <ul class="bt-footer-list">
                        <li><a href="#">Trạng thái đơn hàng</a></li>
                        <li><a href="#">Hình thức giao hàng</a></li>
                        <li><a href="#">Hình thức thanh toán</a></li>
                        <li><a href="#">Hướng dẫn cách chọn Size</a></li>
                        <li><a href="#">Chính sách đổi Size</a></li>
                        <li><a href="#">Chính sách đổi trả</a></li>
                        <li><a href="#">Chính sách bảo hành</a></li>
                        <li><a href="#">Chính sách khách hàng thân thiết</a></li>
                        <li><a href="#">Chính sách bảo vệ thông tin khách hàng</a></li>
                    </ul>
                </div>

                <!-- Cột 3 -->
                <div class="col-md-3">
                    <h5 class="bt-footer-title">TRỢ GIÚP</h5>
                    <ul class="bt-footer-list">
                        <li><a href="#">Tuyển dụng</a></li>
                        <li><a href="#">Hệ thống cửa hàng</a></li>
                        <li><a href="#">Liên hệ hợp tác</a></li>
                        <li><a href="#">Q&A</a></li>
                    </ul>
                </div>

                <!-- Cột 4 -->
                <div class="col-md-3">
                    <img src="/images/logo-bitis-placeholder.svg" style="max-width:120px;" class="mb-3" />

                    <div class="bt-company">
                        <strong>CÔNG TY TNHH SẢN XUẤT HÀNG TIÊU DÙNG BÌNH TIÊN</strong>
                        <p class="mb-1">Địa chỉ: 22 Lý Chiêu Hoàng, Phường 10, Quận 6, TP. Hồ Chí Minh</p>

                        <p class="mb-1">
                            Điện thoại:
                            <a href="tel:02838753443">(028) 38 753 443</a>
                        </p>

                        <p class="mb-1">
                            Email:
                            <a href="mailto:chamsockhachhang@bitis.com.vn">chamsockhachhang@bitis.com.vn</a>
                        </p>

                        <p class="mb-1">
                            Hotline:
                            <a href="tel:0966158666">0966158666</a>
                        </p>

                        <p class="mb-0">Thời gian tư vấn: 8h – 21h30 mỗi ngày</p>
                    </div>
                </div>
            </div>

            <div class="bt-footer-bottom text-center mt-4">
                © @DateTime.Now.Year Biti's style demo – Dùng cho đồ án ASP.NET
            </div>

        </div>
    </footer>


    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/bitis.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
